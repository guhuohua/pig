<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pig4cloud.pig.goods.manage.mapper.GoodsDetailsMapper">

  <resultMap id="goodsDetailsMap" type="com.pig4cloud.pig.goods.api.entity.GoodsDetails">
                  <id property="id" column="Id"/>
                        <result property="shopId" column="shop_id"/>
                        <result property="status" column="status"/>
                        <result property="createTime" column="create_time"/>
                        <result property="details" column="details"/>
                        <result property="goodsId" column="goods_id"/>
            </resultMap>

  <!--goodsDetails简单分页查询-->
  <select id="getGoodsDetailsPage" resultMap="goodsDetailsMap">
    SELECT
                  Id,
                        shop_id,
                        status,
                        create_time,
                        details,
                        goods_id
              FROM goods_details
    <where>
              <if test="goodsDetails.id != null and goodsDetails.id.trim() != ''">
          AND Id = #{goodsDetails.id}
        </if>
              <if test="goodsDetails.shopId != null and goodsDetails.shopId.trim() != ''">
          AND shop_id = #{goodsDetails.shopId}
        </if>
              <if test="goodsDetails.status != null and goodsDetails.status.trim() != ''">
          AND status = #{goodsDetails.status}
        </if>
              <if test="goodsDetails.createTime != null and goodsDetails.createTime.trim() != ''">
          AND create_time = #{goodsDetails.createTime}
        </if>
              <if test="goodsDetails.details != null and goodsDetails.details.trim() != ''">
          AND details = #{goodsDetails.details}
        </if>
              <if test="goodsDetails.goodsId != null and goodsDetails.goodsId.trim() != ''">
          AND goods_id = #{goodsDetails.goodsId}
        </if>
          </where>
  </select>



</mapper>
